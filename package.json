{
  "name": "bear",
  "private": true,
  "type": "module",
  "workspaces": [
    "Frontend_Module_Federation/app/*",
    "Frontend",
    "Backend/gateway",
    "Backend/services/*",
    "Backend/consumers/*",
    "Backend/libs/*"
  ],
  "scripts": {
    "dev:infra": "docker compose -f docker-compose.dev.yml --profile infra up -d",
    "dev:api": "docker compose -f docker-compose.dev.yml --profile api up",
    "dev:post": "docker compose -f docker-compose.dev.yml --profile api up post-service",
    "dev:root": "npm run dev:infra && npm run dev:api",
    "-------------------------": "",
    "down": "docker compose -f docker-compose.dev.yml down",
    "logs": "docker compose -f docker-compose.dev.yml logs -f",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "--------------------": "",
    "build:B:post": "npm --workspace Backend/services/post-service run build",
    "---------------------": "",
    "Ldev:B:gateway": "npm --workspace Backend/gateway run dev",
    "Ldev:B:post": "npm --workspace Backend/services/post-service run dev",
    "Ldev:B:user": "npm --workspace Backend/services/user-service run dev",
    "Ldev:B:search": "npm --workspace Backend/services/search-service run dev",
    "Ldev:B:comment": "npm --workspace Backend/services/comment-service run dev",
    "Ldev:B:vote": "npm --workspace Backend/services/vote-service run dev",
    "Ldev:B:feed": "npm --workspace Backend/services/feed-service run dev",
    "-------------------": "",
    "Ldev:F": "npm --workspace Frontend run dev",
    "----------------------": "",
    "build:FMF:user": "npm --workspace Frontend_Module_Federation/app/user run build",
    "build:FMF:shell": "npm --workspace Frontend_Module_Federation/app/shell run build",
    "build:FMF:post": "npm --workspace Frontend_Module_Federation/app/post run build",
    "-----------------------": "",
    "preview:FMF:user": "npm --workspace Frontend_Module_Federation/app/user run preview",
    "preview:FMF:shell": "npm --workspace Frontend_Module_Federation/app/shell run preview",
    "preview:FMF:post": "npm --workspace Frontend_Module_Federation/app/post run preview",
    "------------------------": "",
    "Ldev:FMF:shell": "npm --workspace Frontend_Module_Federation/app/shell run dev",
    "Ldev:FMF:user": "npm --workspace Frontend_Module_Federation/app/user run dev",
    "Ldev:FMF:post": "npm --workspace Frontend_Module_Federation/app/post run dev"
  }
}
