{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "lib": ["ES2020"],
    "baseUrl": "./",
    "paths": {
      "@libs/*": ["../../libs/*"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../../libs/kafka" }
  ]
}
