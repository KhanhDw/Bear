{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@db/*": ["src/db/*"],
      "@modules/*": ["src/modules/*"],
      "@utils/*": ["../../libs/utils/src/*"],
      "@logger/*": ["../../libs/logger/src/*"],
      "@kafka/*": ["../../libs/kafka/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "../../libs/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}